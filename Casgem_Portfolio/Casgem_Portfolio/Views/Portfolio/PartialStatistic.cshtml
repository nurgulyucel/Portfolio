            <div class="col-sm-3 col-6 stats_info counter_grid">
                <span class="fa fa-laptop"></span>
                <p class="counter">@ViewBag.totalService</p>
                <h4>Tamamlanan Projeler</h4>
            </div>
            <div class="col-sm-3 col-6 stats_info counter_grid1">
